<UserControl x:Class="Order.View.ActionHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Order.View"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="500" d:DesignWidth="700"
             Height="800" 
             DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False"
                  VerticalAlignment="Top" 
                  ItemsSource="{Binding Path = DataGridItem, Mode=TwoWay,
                  NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}">
            <DataGrid.Columns>
                <DataGridTextColumn MinWidth="10" Width="1*" 
                                    Header="설비명" Binding="{Binding GridTitle}"/>
                <DataGridTextColumn MinWidth="10" Width="1*" Foreground="Red"
                                    Header="Order" Binding="{Binding OrderTime}"/>
                <DataGridTextColumn MinWidth="10" Width="1*" Foreground="Blue"
                                    Header="Clear" Binding="{Binding OrderClearTime}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
