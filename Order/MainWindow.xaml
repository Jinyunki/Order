<Window x:Class="Order.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Order.View"
        xmlns:vm="clr-namespace:Order.ViewModel" 

        DataContext="{Binding Main, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:UnderBarViewModel}">
            <view:UnderBarView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SideBarViewModel}">
            <view:SideBarView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <!--Main View-->
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="85*" />
        </Grid.RowDefinitions>

        <!--UnderView-->
        <Grid Grid.Row="0">
            <view:UnderBarView DataContext="{Binding UnderBarViewModel}"/>
        </Grid>

        <!--Body View-->
        <Grid Grid.Row="1" Margin="0 10 0 0">
            <!--Menu View-->
            
            <Grid Grid.Column="0">
                <view:SideBarView/>
            </Grid>
        </Grid>
    </Grid>
</Window>
